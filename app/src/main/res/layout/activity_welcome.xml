<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds"
    android:orientation="vertical">

    <Button
        android:id="@+id/welcomeLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:onClick="loginPressed"
        android:text="@string/welcomeLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/welcomeSignup" />

    <Button
        android:id="@+id/welcomeSignup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:onClick="signupPressed"
        android:text="@string/welcomeSignup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="61dp"
        android:text="@string/welcomeText"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homer"
        android:layout_width="244dp"
        android:layout_height="220dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/homer"
        android:src="@drawable/homer1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintVertical_bias="0.39999998" />

    <ImageView
        android:id="@+id/run"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_marginBottom="138dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/run"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/welcomeLogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/welcomeSignup"
        app:layout_constraintHorizontal_bias="0.531" />

</android.support.constraint.ConstraintLayout>